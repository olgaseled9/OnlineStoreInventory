<Window x:Class="OnlineStoreInventory.GroupedProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Products by Category" Height="450" Width="800">
    <Grid>
        <ListView x:Name="GroupedProductsListView" Margin="10">
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <!-- Заголовок группы будет отображать имя категории -->
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16" Margin="0,5,0,5"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Product Name" DisplayMemberBinding="{Binding Name}" Width="200"/>
                    <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Price}" Width="80"/>
                    <GridViewColumn Header="Weight" DisplayMemberBinding="{Binding Weight}" Width="80"/>
                    <GridViewColumn Header="Barcode" DisplayMemberBinding="{Binding Barcode}" Width="120"/>
                    <!-- Добавьте другие столбцы по необходимости -->
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>